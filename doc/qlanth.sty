\newcommand{\trispoke}{
    \mathord{
        \begin{tikzpicture}[baseline=0ex, scale=0.2]
            % Calculate the height of an equilateral triangle
            \pgfmathsetmacro{\equitriheight}{sqrt(3)/2}
            \pgfmathsetmacro{\equitriheighthalf}{sqrt(3)/4}
            % Draw the triangle and dots, scaled down
            \draw (0,0) -- (0.5,\equitriheighthalf) -- (1,0) -- (0.5,\equitriheighthalf) -- (0.5,\equitriheight) ;
            \fill (0,0) circle (0.15);
            \fill (1,0) circle (0.15);
            \fill (0.5,\equitriheight) circle (0.15);
        \end{tikzpicture}
    }
}

